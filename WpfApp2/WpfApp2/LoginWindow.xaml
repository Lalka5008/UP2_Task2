<Window x:Class="WpfApp2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Вход" Height="450" Width="300">
    <Grid>

        <StackPanel Orientation="Vertical" >
            <TextBlock HorizontalAlignment="Left" Margin="3"  Text="Логин" />
            <TextBox x:Name="LoginTextBox" Margin="3"/>
            <TextBlock HorizontalAlignment="Left" Margin="3"  Text="Пароль"/>
            <PasswordBox x:Name="PasswordTextBox" Margin="3" />
            <Button Content="Войти"  HorizontalAlignment="Stretch" Margin="3,20" Click="Button_Click"/>
            <Button Content="Войти как гость" Margin="3" Click="Button_Click_1"/>

        </StackPanel>

    </Grid>
</Window>
