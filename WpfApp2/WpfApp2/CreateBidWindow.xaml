<Window x:Class="WpfApp2.CreateBidWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Создание заявки" Height="650" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Новая заявка" FontSize="20" FontWeight="Bold" 
                   Margin="0,0,0,15" HorizontalAlignment="Left"/>

        <!-- Основной контент -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Блок: Клиент -->
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                           Text="Информация о клиенте" FontWeight="SemiBold" FontSize="14" 
                           Margin="0,0,0,10"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Клиент:" Foreground="#666" 
                           Margin="0,5" VerticalAlignment="Center" Width="100"/>
                <ComboBox x:Name="cbClient" Grid.Row="1" Grid.Column="1" 
                          DisplayMemberPath="Name" 
                          Height="28" Margin="0,3,0,10" Padding="5"/>

                <!-- Разделитель -->
                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                        BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Margin="0,10,0,15"/>

                <!-- Блок: Курс -->
                <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                           Text="Информация о курсе" FontWeight="SemiBold" FontSize="14" 
                           Margin="0,0,0,10"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Курс:" Foreground="#666" 
                           Margin="0,5" VerticalAlignment="Center" Width="100"/>
                <ComboBox x:Name="cbCourse" Grid.Row="4" Grid.Column="1" 
                          DisplayMemberPath="СourseName" 
                          SelectionChanged="Course_Changed" 
                          Height="28" Margin="0,3,0,10" Padding="5"/>

                <!-- Детальная информация о курсе -->
                <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                        BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" 
                        Padding="15" Margin="0,5,0,15" Background="#F9F9F9">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:" Foreground="#666" Margin="0,3"/>
                        <TextBlock x:Name="txtCourseInfo" Grid.Row="0" Grid.Column="1" 
                                   Margin="5,3" FontWeight="Bold" Foreground="#007ACC"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Направление:" Foreground="#666" Margin="0,3"/>
                        <TextBlock x:Name="txtDirection" Grid.Row="1" Grid.Column="1" Margin="5,3"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Длительность:" Foreground="#666" Margin="0,3"/>
                        <TextBlock x:Name="txtDuration" Grid.Row="2" Grid.Column="1" Margin="5,3"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Цена за место:" Foreground="#666" Margin="0,3"/>
                        <TextBlock x:Name="txtPrice" Grid.Row="3" Grid.Column="1" 
                                   Margin="5,3" FontWeight="SemiBold"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Преподаватель:" Foreground="#666" Margin="0,3"/>
                        <TextBlock x:Name="txtTeacherInfo" Grid.Row="4" Grid.Column="1" Margin="5,3"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Дата старта:" Foreground="#666" Margin="0,3"/>
                        <TextBlock x:Name="txtStartDate" Grid.Row="5" Grid.Column="1" Margin="5,3"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Свободно мест:" Foreground="#666" Margin="0,3"/>
                        <TextBlock x:Name="txtFreeSeats" Grid.Row="6" Grid.Column="1" 
                                   Margin="5,3" Foreground="#C00" FontWeight="Bold"/>
                    </Grid>
                </Border>

                <!-- Блок: Стоимость -->
                <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                           Text="Стоимость" FontWeight="SemiBold" FontSize="14" 
                           Margin="0,0,0,10"/>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="Количество мест:" Foreground="#666" 
                           Margin="0,5" VerticalAlignment="Center" Width="100"/>
                <TextBox x:Name="txtSeats" Grid.Row="7" Grid.Column="1" 
                         Text="1" TextChanged="Seats_Changed" 
                         Width="80" Height="28" Padding="5" Margin="0,3,0,10" HorizontalAlignment="Left"/>

                <!-- Итоговая стоимость -->
                <Border Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" 
                        BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" 
                        Padding="15" Margin="0,5,0,15" Background="#F1F8E9">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Итоговая стоимость:" FontSize="14"/>
                        <TextBlock x:Name="txtTotalPrice" Grid.Column="1" 
                                   FontSize="18" FontWeight="Bold" Foreground="#2E7D32"/>
                    </Grid>
                </Border>

                <!-- Комментарий -->
                <TextBlock Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" 
                           Text="Комментарий" FontWeight="SemiBold" FontSize="14" 
                           Margin="0,0,0,5"/>

                <TextBox x:Name="txtComment" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" 
                         Height="80" TextWrapping="Wrap" AcceptsReturn="True" 
                         VerticalScrollBarVisibility="Auto" Padding="8" Margin="0,0,0,15"/>

                <!-- Сообщение об ошибке -->
                <Border Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" 
                        BorderBrush="#FFCDD2" BorderThickness="1" CornerRadius="3" 
                        Background="#FFEBEE" Margin="0,0,0,10" 
                        Visibility="{Binding ElementName=txtError, Path=Visibility}">
                    <TextBlock x:Name="txtError" Foreground="#D32F2F" Margin="10" 
                               TextWrapping="Wrap" Visibility="Collapsed"/>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" 
                Padding="0,15,0,0" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Создать заявку" Click="Create_Click" 
                        Margin="0,0,10,0" Padding="20,8" MinWidth="120"
                        Background="#2196F3" Foreground="White" BorderThickness="0" />
                <Button Content="Отмена" Click="Cancel_Click" 
                        Padding="20,8" MinWidth="100"
                        Background="#E0E0E0" BorderThickness="0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
